@using System.Data;
@model DataSet;
<div class="table-responsive">
    <table class="table align-middle table-nowrap mb-0" id="tblDiscountReport">
        <thead class="table-light text-muted">
            <tr>               
                <th class="text-center" style="width: 5%">S.No</th>
                <th>Parent ID</th>
                <th>Parent Name</th>
                <th>Father Iqama</th>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Grade</th>
                <th>Cost Center</th>
                <th>Academic Year</th>
                <th>Mobile</th>
				<th>Staff</th>
				<th>Description</th>
				<th>Date</th>
                <th class="text-end">Discount Applied</th>
                <th class="text-end">Discount Cancelled</th>
            </tr>
        </thead>
        <tbody class="list form-check-all">
            @if (Model != null && Model.Tables.Count > 0 && Model.Tables[0].Rows.Count > 0)
            {
                int i = 0;
                foreach (DataRow dr in Model.Tables[0].Rows)
                {
                    i++;
                   <tr class="@(!string.IsNullOrEmpty(Convert.ToString(dr["ParentCode"]).Trim()) ? "" : "total")">
                        <td class="text-center">@(!string.IsNullOrEmpty(Convert.ToString(dr["ParentCode"]).Trim()) ? (i - 1) : "")</td>
                        <td>@dr["ParentCode"]</td>
                        <td>@dr["FatherName"]</td>
                        <td>@dr["FatherIqamaNo"]</td>
                        <td>@dr["StudentCode"]</td>
                        <td>@dr["StudentName"]</td>
                        <td>@dr["GradeName"]</td>
                        <td>@dr["CostCenterName"]</td>
                        <td>@dr["AcademicYear"]</td>
                        <td>@dr["Mobile"]</td>
                        <td>@dr["IsFatherStaff"]</td>
                        <td>@dr["FeeStatementType"]</td>
                        <td>@dr["UpdateDate"]</td>
                        <td class="text-end">@dr["DiscountApplied"]</td>
                        <td class="text-end">@dr["DiscountCancelled"]</td>
                    </tr>
                }
            }
        </tbody>
        @*  <tfoot>
        <tr>
        <th colspan="8" class="text-end">Total Balance:</th>
        <th class="text-end" id="totalBalanceAmount"></th>
        </tr>
        </tfoot> *@
    </table>
</div>

